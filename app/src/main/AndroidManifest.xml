<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetApp">
        <activity android:name=".AddCategoryActivity"
            android:parentActivityName=".CategoryRecyclerViewActivity" />
        <activity android:name=".CategoryRecyclerViewActivity" />
        <activity android:name=".CalendarActivity" />
        <activity
            android:name=".AddExpenseActivity"
            android:parentActivityName=".ExpenseRecyclerViewActivity" />
        <activity
            android:name=".ExpenseRecyclerViewActivity"
            android:launchMode="singleTop" />
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>