<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetApp">
        <activity
            android:name=".Activities.SearchActivity"
            android:parentActivityName=".Activities.MainActivity">
            </activity>
        <activity
            android:name=".Activities.AddCategoryActivity"
            android:parentActivityName=".Activities.CategoryRecyclerViewActivity" />
        <activity android:name=".Activities.CategoryRecyclerViewActivity" />
        <activity
            android:name=".Activities.AddExpenseIncomeActivity"
            android:parentActivityName=".Activities.ExpenseIncomeRCVActivity" />
        <activity
            android:name=".Activities.ExpenseIncomeRCVActivity"
            android:launchMode="singleTop" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>